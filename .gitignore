# ------------------------------------------------------------------------------
# Drupal-specific ignores
# ------------------------------------------------------------------------------

# Ignore configuration files that may contain sensitive information.
# These files are typically created manually or by an installation profile.
# It'''s a security best practice to keep them out of version control.
/web/sites/*/*settings*.php
/web/sites/*/*services*.yml

# Ignore user-generated content directories.
# These directories store uploaded files, which can be very large and are not
# part of the application'''s codebase.
/web/sites/*/files
/web/sites/*/public
/web/sites/*/private
/web/sites/*/files-public
/web/sites/*/files-private

# Ignore temporary files and caches.
# These files are generated by Drupal and can be safely ignored.
/web/sites/*/translations
/web/sites/*/tmp
/web/sites/*/cache

# Ignore Drupal core, vendor, and other generated directories.
# These are managed by Composer and should not be in version control.
/web/vendor
/web/core

# Ignore Composer-managed module, profile, and theme directories.
# Only custom modules, profiles, and themes should be versioned.
/web/modules/contrib/
/web/profiles/contrib/
/web/themes/contrib/

# Ignore simpletest and other testing-related directories.
/web/sites/simpletest

# Ignore development-specific files.
/web/sites/development.services.yml
/web/sites/example.settings.local.php
/web/sites/example.sites.php

# Ignore files from the root of the Drupal installation that are not needed.
/web/modules/README.txt
/web/profiles/README.txt
/web/sites/README.txt
/web/themes/README.txt
/web/.csslintrc
/web/.editorconfig
/web/.eslintignore
/web/.eslintrc.json
/web/.gitattributes
/web/.htaccess
/web/.ht.router.php
/web/autoload.php
/web/composer.json
/web/composer.lock
/web/example.gitignore
/web/index.php
/web/INSTALL.txt
/web/LICENSE.txt
/web/README.txt
/web/robots.txt
/web/update.php
/web/web.config

# ------------------------------------------------------------------------------
# Composer-specific ignores
# ------------------------------------------------------------------------------

# Ignore the vendor directory, which is managed by Composer.
/vendor

# Ignore Composer-related files.
/composer.phar
/composer
/robo.phar
/robo
/drush.phar
/drush
/drupal.phar
/drupal

# ------------------------------------------------------------------------------
# Terraform-specific ignores
# ------------------------------------------------------------------------------

# Ignore Terraform provider plugins and other temporary files.
# A specific .gitignore file is also present in the /terraform directory.
/terraform/.terraform
.terraform/

# ------------------------------------------------------------------------------
# General ignores
# ------------------------------------------------------------------------------

# Ignore OS-generated files.
.DS_Store
Thumbs.db

# Ignore common IDE folders.
.idea/
.vscode/